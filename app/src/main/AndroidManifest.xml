<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.anky.coolchineseidioms">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".IdiomCollectionProvider"
            android:authorities="me.anky.coolchineseidioms"
            android:exported="false" />

        <provider
            android:name=".UserProvider"
            android:authorities="me.anky.coolchineseidioms.user"
            android:exported="false" />

        <activity android:name=".IdiomListActivity" />
        <activity android:name=".DetailActivity"></activity>
        <!-- App Widget -->
        <receiver
            android:name=".WidgetProvider"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="me.anky.coolchineseidioms.ACTION_DATA_UPDATED"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_widget_info" />
        </receiver>
        <service android:name=".WidgetIntentService"/>
        <service android:name=".MediaPlayerService" />
    </application>

</manifest>