<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_12dp"
    tools:context=".RecordingFragment">

    <include layout="@layout/divider_view" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_12dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_listen"
            style="@style/RecorderButton"
            android:contentDescription="@string/button_listen"
            android:text="@string/button_listen" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_record"
            style="@style/RecorderButton"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:backgroundTint="@color/red_a200"
            android:contentDescription="@string/button_record"
            android:text="@string/button_record" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_play"
            style="@style/RecorderButton"
            android:contentDescription="@string/button_play"
            android:text="@string/button_play" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_close"
        style="@style/RecorderButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_8dp"
        android:contentDescription="@string/button_close"
        android:text="@string/button_close" />

</LinearLayout>
