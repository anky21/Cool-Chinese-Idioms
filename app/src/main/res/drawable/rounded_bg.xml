<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <!--<solid android:color="@color/teal_500" />-->
    <gradient
        android:angle="-45"
        android:endColor="@color/teal_700"
        android:startColor="@color/teal_500"
        android:type="linear" />
    <!-- Border color and thick -->
    <stroke
        android:width="0dp"
        android:color="@color/teal_500" />

    <!-- Padding for text inside -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

    <!-- Corner radius, note that radius can be different for each corner -->
    <corners android:radius="5dp" />
</shape>